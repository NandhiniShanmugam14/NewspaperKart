<head>
    <style>
        .tiles .link-tiles {
            margin-bottom: 20px;
            background: #090226;
            height: 137px;
        }

        .tiles .link-tiles a {
            display: inline-flex;
            width: 100%;
            height: 100%;
            align-items: center;
            position: relative;
            color: white;
            font-weight: 500;
            font-size: 17px;
            line-height: 20px;
            padding-left: 2.2rem;
            text-transform: uppercase;
            border-radius: 5px;
            text-decoration: none;
        }


        .link-tiles:hover {
            background: #0f194d;
            transition: all, 0.4s, ease;
        }

        .link-tiles:hover a {
            color: lightgreen;
        }

        .link-tiles:hover a {
            color: lightgreen;
        }
    </style>
</head>
<body>
    <div class="justify-content-xl-center" align="center">
        <br />
        <section class="tiles">
            <div class="container">
                <h2 style="font-family: 'Comic Sans MS'">Most Popular</h2>
                <br /><br />
                <div class="row">
                    <div class="col-md-3">
                        <div class="link-tiles" style="border-radius: 10px;">
                            @Html.ActionLink("The Times of India", "TimesOfIndia", "NewspaperDetails")
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="link-tiles" style="padding-left: 3rem; border-radius: 10px;">
                            @Html.ActionLink("Indian Era", "Indianera", "NewspaperDetails")
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="link-tiles" style="padding-left: 3rem; border-radius: 10px;">
                            @Html.ActionLink("The Hindu", "TheHindu", "NewspaperDetails")
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="link-tiles" style="border-radius: 10px;">
                            @Html.ActionLink("Hindustan Times", "HindustanTimes", "NewspaperDetails")
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="link-tiles" style="border-radius: 10px;">
                            @Html.ActionLink("The Economic Times", "EconomicalTimes", "NewspaperDetails")
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="link-tiles" style="border-radius: 10px;">
                            @Html.ActionLink("Deccan Chronicle", "DeccanChronicle", "NewspaperDetails")
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="link-tiles" style="border-radius: 10px;">
                            @Html.ActionLink("Business Standard", "BusinessStandard", "NewspaperDetails")
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="link-tiles" style="border-radius: 10px;">
                            @Html.ActionLink("The Indian Express", "IndianExpress", "NewspaperDetails")
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="justify-content-xl-center" align="center">
            <a asp-action="AddSubscription" asp-controller="Subscription" class="btn btn-primary">Subscribe</a>
            @*<a asp-action="Index" asp-controller="Partner" class="btn btn-primary">Partner with us?</a>*@
        </div>
    </div>
</body>
