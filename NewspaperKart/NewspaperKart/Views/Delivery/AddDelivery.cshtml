@model NewspaperKart.CTSModel.Delivery

@{
    ViewData["Title"] = "AddDelivery";
}

<div class="justify-content-xl-center" align="center">


    <h1>Add Delivery Person</h1>

    @*<h4>Delivery</h4>*@
    <hr />
    <div class="">
        <div class="col-md-4">
            <form asp-action="AddDelivery">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phoneno" class="control-label">Phone Number</label>
                    <input asp-for="Phoneno" class="form-control" />
                    <span asp-validation-for="Phoneno" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Location" class="control-label">Location</label>
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-outline-success" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="ViewDelivery" class="btn btn-outline-dark">Back</a>
    </div>

    </div>