@model NewspaperKart.CTSModel.AddDelivery

@{
    ViewData["Title"] = "AddDeliveryPartner";
}

<div class="justify-content-xl-center" align="center">

    <h1>Add Delivery Partner</h1>

    <div>
        <a asp-action="ViewDeliveryDetails" class="btn btn-outline-success">View Delivery Details</a>
    </div>

    @*<h4>AddDelivery</h4>*@
    <hr />
    <div class="">
        <div class="col-md-4">
            <form asp-action="AddDeliveryPartner">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CustomerName" class="control-label">Customer Name</label>
                    @*<input asp-for="CustomerName" class="form-control" />*@
                    <select asp-for="CustomerName" class="form-control" asp-items="ViewBag.Id">
                        <option value="">Select</option>

                        <option value="Rachel">Rachel</option>
                        <option value="Jane">Jane</option>



                    </select>
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewspaperName" class="control-label">Newspaper Name</label>
                    @*<input asp-for="NewspaperName" class="form-control" />*@
                    <select asp-for="NewspaperName" class="form-control" asp-items="ViewBag.Id">
                        <option value="">Select</option>

                        <option value="Digital">Times of India</option>
                        <option value="Indian Express">Indian Express</option>

                        <option value="Deccan Chronicle">Deccan Chronicle</option>
                        <option value="Hindustan Times">Hindustan Times</option>
                        <option value="Business Standard">Business Standard</option>


                    </select>
                    <span asp-validation-for="NewspaperName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phoneno" class="control-label">Phone Number</label>
                    <input asp-for="Phoneno" class="form-control" />
                    <span asp-validation-for="Phoneno" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DeliveryMan" class="control-label">Delivery Person</label>
                    @*<input asp-for="DeliveryMan" class="form-control" />*@
                    <select asp-for="DeliveryMan" class="form-control" asp-items="ViewBag.Id">
                        <option value="">Select</option>

                        <option value="Akash">Akash</option>
                        <option value="Harrish">Harrish</option>



                    </select>
                    <span asp-validation-for="DeliveryMan" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add Delivery Partner" class="btn btn-outline-success" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Vendor" asp-controller="Home" class="btn btn-outline-dark">Back</a>
    </div>

</div>
