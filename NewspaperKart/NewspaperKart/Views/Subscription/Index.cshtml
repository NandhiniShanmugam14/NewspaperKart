@model IEnumerable<NewspaperKart.Models.Subscriptiontbl>

@using Microsoft.AspNetCore.Http
@using System.Linq
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "ViewSubscription";
    ViewBag.CustId = HttpContextAccessor.HttpContext.Session.GetInt32("CustId");
    ViewBag.CustomerId = HttpContextAccessor.HttpContext.Session.GetInt32("CustUserId");
}

<style>
    .subscription {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        .subscription td, .subscription th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        .subscription tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .subscription tr:hover {
            background-color: #ddd;
        }

        .subscription th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #01054d;
            color: white;
        }
</style>

<body>
    <br />
    <h2 class="text-center" style="font-family: 'Comic Sans MS'">My Subscriptions</h2><br />
    <table class="subscription">
        <thead>
            <tr>
                @*<th>
                    @Html.DisplayNameFor(model => model.CustId)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.Subscriptiontype)*@
                    <label style="margin-top: 5px;">Subscription type</label>
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.Timeperiod)*@
                    <label style="margin-top: 5px;">Time Period</label>
                </th>
                <th>Unsubscribe</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                @if (ViewBag.CustomerId == item.CustId)
                {
                    <tr>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.CustId)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subscriptiontype)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Timeperiod)
                        </td>
                        <td>
                            <a asp-action="UpdateSubscription" asp-route-id="@item.SubId" class="btn btn-outline-primary">Upgrade</a> &nbsp;&nbsp;&nbsp;&nbsp;
                            <a asp-action="DeleteSubscription" asp-route-id="@item.SubId" class="btn btn-outline-danger">Unsubscribe</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <br /><br />
    <center>
        <div class="row button" style="margin-left: 500px;">
            <a asp-action="AddSubscription" asp-controller="Subscription" class="btn btn-outline-dark">Back</a>
        </div>
    </center>
</body>



