@*@model NewspaperKart.CTSModel.Subscription*@

@{
    ViewData["Title"] = "Index";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>

<body>
    <br />
    <h2 class="text-center" style="font-family: 'Comic Sans MS'">Partner with us</h2><br />
    <br />
    <div class="formclass">
        <div class="wrapper">
            <div class="title"><span>Payment form</span></div>
            <form asp-action="Index" style="border: 2px solid #006953; border-radius: 0 0 10px 10px; ">
                <div class="row">
                    <i class="fas fa-user"></i>
                    <input type="text" placeholder="Card holder's name'" required>
                    <span class="text-danger"></span>
                </div>
                <div class="row">
                    <i class="fas fa-lock"></i>
                    <input type="text" placeholder="Card number" required>
                    <span class="text-danger"></span>
                </div>
                <div class="row">
                    <i class="fas fa-lock"></i>
                    <input type="date" placeholder="Expiry date" required>
                    <span class="text-danger"></span>
                </div>
                <div class="row">
                    <i class="fas fa-lock"></i>
                    <input type="text" placeholder="CVC/CVV" required>
                    <span class="text-danger"></span>
                </div>
                <div class="row button">
                    <input type="submit" value="Pay" class="btn btn-success" asp-action="Index" asp-controller="Subscription" />
                </div>
            </form>
        </div>
    </div>
</body>

