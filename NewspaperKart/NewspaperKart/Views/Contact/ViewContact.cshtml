@model IEnumerable<NewspaperKart.CTSModel.Contact>

@{
    ViewData["Title"] = "ViewContact";
}

<div class="justify-content-xl-center" align="center">


    <h1>View Contact</h1>

    @*<p>
        <a asp-action="Index" class="btn btn-outline-success">Create New</a>
    </p>*@
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phoneno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NewspaperTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Issue)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phoneno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NewspaperTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Issue)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-info">Edit</a> |
                        @*<a asp-action="Details" asp-route-id="@item.Email">Details</a> |*@
                        <a asp-action="" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <a asp-action="Vendor" asp-controller="Home" class="btn btn-outline-dark">Back</a>
    </div>

</div>