@model NewspaperKart.Models.Newspapertbl


@{
    ViewData["Title"] = "UpdateNewspaper";
}


<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>

<body>
    <div class="container">
        <br />
        <div class="formclass">
            <div class="wrapper">
                <div class="title"><span>Update Newspaper</span></div>
                <form asp-action="UpdateNewspaper" style="border: 2px solid #006953; border-radius: 0 0 10px 10px; ">
                    <div class="row">
                        <i class="fas fa-user"></i>
                        <input asp-for="Title" type="text" placeholder="Title" required>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <i class="fa fa-language" aria-hidden="true"></i>
                        <input asp-for="Language" type="text" placeholder="Language" required>
                        <span asp-validation-for="Language" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <i class="fa fa-credit-card" aria-hidden="true"></i>
                        <input asp-for="Price" type="tel" placeholder="Price" required>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="row button">
                        <input type="submit" value="Update" class="btn btn-info">
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
