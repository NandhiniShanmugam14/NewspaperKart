@model NewspaperKart.Models.AddDeliverytbl


@using Microsoft.AspNetCore.Http
@using System.Linq
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Add Delivery";
}


<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>

<body>
    <div class="container">
        <br />

        <center>
            <h2 class="text-center" style="display: inline-block; margin-left: auto; font-family: 'Comic Sans MS'">Add Newspaper</h2>
        </center>
        <div class="formclass">
            <div class="wrapper">
                <div class="title"><span>Add Delivery form</span></div>
                <form asp-action="AddDelivery" style="border: 2px solid #006953; border-radius: 0 0 10px 10px; ">
                    <div class="row" style="margin-bottom: 0.7cm;">
                        <i class="fa fa-language" aria-hidden="true"></i>
                        <input asp-for="CustName" type="text" placeholder="Customer Name" required>
                        <span asp-validation-for="CustName" class="text-danger"></span>
                    </div>
                    <div class="row" style="margin-bottom: 0.7cm;">
                        <i class="fa fa-credit-card" aria-hidden="true"></i>
                        <input asp-for="Title" type="text" placeholder="Title" required>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="row" style="margin-bottom: 0.7cm;">
                        <i class="fa fa-credit-card" aria-hidden="true"></i>
                        <input asp-for="Timeperiod" type="text" placeholder="Time Period" required>
                        <span asp-validation-for="Timeperiod" class="text-danger"></span>
                    </div>
                    <div class="row" style="margin-bottom: 0.7cm;">
                        <i class="fa fa-credit-card" aria-hidden="true"></i>
                        @Html.DropDownListFor(model => model.DelPartner, new SelectList(ViewBag.specialization, "Value", "Text"), "--- Select ---")
                        <span asp-validation-for="DelPartner" class="text-danger"></span>
                    </div>
                    <div class="row button">
                        <input type="submit" value="Submit" class="btn btn-info">
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
