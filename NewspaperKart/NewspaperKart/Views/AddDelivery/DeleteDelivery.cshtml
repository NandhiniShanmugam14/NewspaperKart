                                <td>
                                    <h5>
                                        @Html.DisplayFor(model => model.Timeperiod)
                                    </h5>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    <h5>
                                        @Html.DisplayNameFor(model => model.DelPartner)
                                    </h5>
                                </th>
