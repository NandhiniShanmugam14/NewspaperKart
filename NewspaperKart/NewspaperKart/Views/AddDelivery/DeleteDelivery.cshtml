                <div class="content-box">
                    <center>
                        <h5 class="text-center" style="text-decoration: underline; display: inline-block; margin-left: auto; font-family: 'Comic Sans MS'">Newspaper</h5>
                        <br />
                        <br />
                        <table>
                            <tr>
                                <th>
                                    <h5>
                                        @Html.DisplayNameFor(model => model.DelId)
                                    </h5>
                                </th>
                                <td>&nbsp;&nbsp;&nbsp;&nbsp;:&nbsp;&nbsp;&nbsp;&nbsp;</td>
                                <td>
                                    <h5>
                                        @Html.DisplayFor(model => model.DelId)
                                    </h5>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    <h5>
                                        @Html.DisplayNameFor(model => model.CustName)
                                    </h5>
                                </th>
                                <td>&nbsp;&nbsp;&nbsp;&nbsp;:&nbsp;&nbsp;&nbsp;&nbsp;</td>
                                <td>
                                    <h5>
                                        @Html.DisplayFor(model => model.CustName)
                                    </h5>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    <h5>
                                        @Html.DisplayNameFor(model => model.Title)
                                    </h5>
                                </th>
                                <td>&nbsp;&nbsp;&nbsp;&nbsp;:&nbsp;&nbsp;&nbsp;&nbsp;</td>
                                <td>
                                    <h5>
                                        @Html.DisplayFor(model => model.Title)
                                    </h5>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    <h5>
                                        @Html.DisplayNameFor(model => model.Timeperiod)
                                    </h5>
                                </th>
