@model NewspaperKart.Models.AddDeliverytbl


@{
    ViewData["Title"] = "Update Delivery";
}


<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>

<body>
    <div class="container">
        <br />
        <div class="formclass">
            <div class="wrapper">
                <div class="title"><span>Update Delivery</span></div>
                <form asp-action="UpdateDelivery" style="border: 2px solid #006953; border-radius: 0 0 10px 10px; ">
                    <input asp-for="DelId" hidden>
                    <div class="row">
                        <i class="fas fa-user"></i>
                        <input asp-for="CustName" type="text" placeholder="Customer name" required>
                        <span asp-validation-for="CustName" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <i class="fa fa-language" aria-hidden="true"></i>
                        <input asp-for="Title" type="text" placeholder="Title" required>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <i class="fa fa-credit-card" aria-hidden="true"></i>
                        <input asp-for="Timeperiod" type="tel" placeholder="Time Period" required>
                        <span asp-validation-for="Timeperiod" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <i class="fa fa-credit-card" aria-hidden="true"></i>
                        @Html.DropDownListFor(model => model.DelPartner, new SelectList(ViewBag.specialization, "Value", "Text"), "--- Select ---")
                        <span asp-validation-for="DelPartner" class="text-danger"></span>
                    </div>
                    <div class="row button">
                        <input type="submit" value="Update" class="btn btn-info">
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
